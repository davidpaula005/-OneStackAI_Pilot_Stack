generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model CampaignRequest {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  offer     String?
  audience  String?
  goal      String?
  channel   String?
  cta       String?
  ip        String?
}

model VideoJob {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  title     String
  type      String   // 'avatar' | 'generativ'
  length    String
  voice     String?
  script    String?
  status    String   @default("queued")
}


